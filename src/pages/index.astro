---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
const playStoreUrl = import.meta.env.PUBLIC_PLAY_STORE_URL;
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="hero-container">
    <h1 class="game-title">ASTEROIDS</h1>
    <p class="tagline">The timeless 1979 arcade classic</p>
    <div class="button-container">
      <a href="/gameplay" class="play-button">Play Now</a>
      {playStoreUrl && (
        <a href={playStoreUrl} target="_blank" rel="noopener" class="play-button store-button">
          Play Store
        </a>
      )}
    </div>
  </div>
</BaseLayout>

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
  }

  .game-title {
    font-family: 'Press Start 2P', sans-serif;
    font-size: 4rem;
    color: #00ffff; /* Cyan */
    text-shadow:
      0 0 5px #ff00ff, /* Magenta */
      0 0 10px #ff00ff,
      0 0 15px #ff00ff;
    margin-bottom: 1rem;
    animation: flicker 1.5s infinite alternate;
  }

  .tagline {
    font-size: 1.5rem;
    color: #fff;
    margin-bottom: 2rem;
  }

  .button-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .play-button {
    font-family: 'Press Start 2P', sans-serif;
    background-color: transparent;
    border: 2px solid #00ffff;
    color: #00ffff;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 0 10px #00ffff;
    text-decoration: none;
  }

  .play-button:hover {
    background-color: #00ffff;
    color: #000;
    box-shadow: 0 0 20px #00ffff;
  }

  .store-button {
    border-color: #ff00ff; /* Magenta */
    color: #ff00ff;
    box-shadow: 0 0 10px #ff00ff;
  }

  .store-button:hover {
    background-color: #ff00ff;
    color: #000;
    box-shadow: 0 0 20px #ff00ff;
  }

  @keyframes flicker {
    0%, 18%, 22%, 25%, 53%, 57%, 100% {
      text-shadow:
        0 0 5px #ff00ff,
        0 0 10px #ff00ff,
        0 0 15px #ff00ff;
    }
    20%, 24%, 55% {
      text-shadow: none;
    }
  }
</style>
