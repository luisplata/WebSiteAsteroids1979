---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/privacy-policy">Politica de privacidad</HeaderLink>
      <HeaderLink href="/terms-and-conditions">Terminos y condiciones</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 1rem 1.5rem;
    background-color: #111;
    border-bottom: 1px solid #333;
  }

  nav {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .internal-links {
    display: flex;
    gap: 1.5rem;
  }

  /* Styling for the links is handled by the HeaderLink.astro component */
</style>
