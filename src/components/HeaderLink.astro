---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

// --- LA CORRECCIÓN ---
// Construimos manualmente la URL final.
// Esto garantiza que la ruta base se incluya tanto en desarrollo como en producción.
// El .replace('//', '/') es un truco para evitar un doble slash en la página de inicio.
const finalHref = `${import.meta.env.BASE_URL}${href}`.replace('//', '/');

// Una lógica 'isActive' más simple y robusta.
// Comprueba si la URL actual comienza con la ruta del enlace.
const isActive = Astro.url.pathname.startsWith(finalHref);
---

<a href={finalHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
